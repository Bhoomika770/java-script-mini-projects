let mood = document.getElementById("mood");
let showBtn = document.getElementById("showBtn");
let result = document.getElementById("result");

showBtn.addEventListener("click", function () {
  let value = mood.value;

  if (value === "") {
    result.innerText = "Please select a mood";
  }
  else if (value === "happy") {
    result.innerText = "Keep smiling ðŸ˜„ Youâ€™re doing great!";
  }
  else if (value === "sad") {
    result.innerText = "Itâ€™s okay to feel sad. This too shall pass ðŸ’™";
  }
  else if (value === "angry") {
    result.innerText = "Take a deep breath. Calm is power ðŸ§˜";
  }
  else if (value === "tired") {
    result.innerText = "Rest is productive too ðŸŒ™";
  }
});
